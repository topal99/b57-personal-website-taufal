<!DOCTYPE html>
<html xml:lang>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="assets/styles/index.css">
<link rel="stylesheet" href="assets/styles/blog.css">

<title>
    My Project
</title>
</head>
<!-- navbar start -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img class="logo" src="https://dumbways.id/assets/images/brandwhite.png" alt="Your Company" height="40">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a href="/" class="nav-link text-white custom-hover">Home</a></li>
        <li class="nav-item"><a href="add-project" class="nav-link text-white custom-hover">Add Project</a></li>
        <li class="nav-item"><a href="contact" class="nav-link text-white custom-hover">Contact Form</a></li>
        <li class="nav-item"><a href="testimonials" class="nav-link text-white custom-hover">Testimonials</a></li>
      </ul>
    </div>
  </div>
</nav>
<!-- navbar end -->
<body>
  <div class="mt-5 pt-5 text-center">
    <h1>My Project</h1>
  </div>
<section class="mt-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col text-start">
        <a href="/add-project" class="btn btn-primary">Add some project</a>
      </div>
    </div>
      <div class="row d-flex">
        {{#each projects}}
          <div class="col-md-4 mb-4">
            <div class="card" onclick="redirectToDetail('{{projectId}}')">
              <img src="{{imageUrl}}" class="card-img-top" alt="{{projectName}}">
              <div class="card-body">
                <a href="project-detail/{{@index}}" class="card-title">{{projectName}}</a>
                <h6 class="card-subtitle mb-2 mt-3 text-muted">{{startDate}} - {{endDate}}</h6>
                <p class="card-text">{{technologies}}</p>
                <div class="d-flex justify-content-between mt-4">
                  <a href="/edit-project/{{@index}}" class="btn btn-primary">Edit</a>
                  <a href="/delete-project/{{@index}}" class="btn btn-danger">Delete</a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="assets/js/blog.js"></script>
</body>
</html>