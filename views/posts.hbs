        <button class="btn-light" type="submit">Logout</button>
    </form> 
    </div>
  </div>
</nav>
<!-- navbar end -->

<body>
  <div class="mt-5 pt-5 text-center mb-5">
    <h1>Login</h1>
  </div>
    
<!-- Form Section -->
<section class="mt-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col text-start">
        <a href="/add-post" class="btn btn-primary">Add some project</a>
      </div>
    </div>
      <div class="row d-flex">  
        {{#each posts}}
            <div class="col-md-4 mb-4">
                <div class="card">
                  <img src="/uploads/{{this.image}}" alt="{{this.title}}" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <a href="/posts/{{this.id}}" class="card-title">{{this.title}}</a>
                        <h6 class="card-subtitle mb-2 mt-3 text-muted">{{this.post_date}}</h6>
                        <p class="card-text">{{this.post_type}}</p>
                        <div class="d-flex justify-content-between mt-4">
                            <form action="/posts/{{this.id}}?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                            <a class="btn bg-primary text-white" href="/edit-post/{{this.id}}">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>
  </div>
</section>
