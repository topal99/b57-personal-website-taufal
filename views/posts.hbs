<html xml:lang>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/styles/index.css">
  <link rel="stylesheet" href="/assets/styles/blog.css">

<title>Posts</title>
</head>
<!-- navbar start -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img class="logo" src="https://dumbways.id/assets/images/brandwhite.png" alt="Your Company" height="40">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a href="/" class="nav-link text-white custom-hover">Home</a></li>
        <li class="nav-item"><a href="/posts" class="nav-link text-white custom-hover">Posts</a></li>
        <li class="nav-item"><a href="/add-post" class="nav-link text-white custom-hover">Add Post</a></li>
        <li class="nav-item"><a href="/contact" class="nav-link text-white custom-hover">Contact Form</a></li>
        <li class="nav-item"><a href="/testimonials" class="nav-link text-white custom-hover">Testimonials</a></li>
